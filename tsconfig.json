{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,//importante
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    //"outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,

    "lib": ["es2017"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".build",
    "rootDir": "./",
    "allowJs": true,
  },
  "exclude": ["node_modules"]
}
